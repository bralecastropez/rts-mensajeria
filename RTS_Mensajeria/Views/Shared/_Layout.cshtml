<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewBag.Title - RTS Mensajeria</title>
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/bundles/compiledcss")
    @Styles.Render("~/bundles/fontawesome")

    <style type="text/css">
        .double-nav .breadcrumb-dn {
            color: #fff;
        }

        .navbar {
            background-color: #3f5c80;
            background: #3f5c80;
        }
    </style>

</head>

<body class="fixed-sn light-blue-skin">

    <!--Double navigation-->
    <header>
        <!-- Sidebar navigation -->
        <div id="slide-out" class="side-nav sn-bg-4 fixed mdb-sidenav">
            <ul class="custom-scrollbar list-unstyled" style="max-height:100vh;">
                <!-- Logo -->
                <li style="height: 121px !important;">
                    <div class="logo-wrapper waves-light" style="height: 121px !important;">
                        <a href="@Url.Action("Index", "Home")"><img src="~/Content/resources/img/LogoGTO.png" class="img-fluid flex-center" /></a>
                    </div>
                </li>
                <li>
                    <ul class="social">
                        <li><br /></li>
                    </ul>
                </li>
                <!--/. Logo -->
                <!--Social-->
                <!--<li>
                    <ul class="social">
                        <li><a href="#" class="icons-sm fb-ic"><i class="fa fa-facebook"> </i></a></li>
                        <li><a href="#" class="icons-sm pin-ic"><i class="fa fa-pinterest"> </i></a></li>
                        <li><a href="#" class="icons-sm gplus-ic"><i class="fa fa-google-plus"> </i></a></li>
                        <li><a href="#" class="icons-sm tw-ic"><i class="fa fa-twitter"> </i></a></li>
                    </ul>
                </li>-->
                <!--/Social-->
                <!--Search Form-->
                <li>
                    <form class="search-form" role="search">
                        <div class="form-group waves-light">
                            <input type="text" class="form-control" placeholder="ERP Mensajeria" disabled="disabled">
                        </div>
                    </form>
                </li>
                <!--/.Search Form-->
                <!-- Side navigation links -->
                <li>
                    <ul class="collapsible collapsible-accordion">


                        @if (!Request.IsAuthenticated)
                        {
                            <li>
                                <a class="collapsible-header waves-effect arrow-r"><i class="fa  fa-user mr-1"></i> Acceso<i class="fa fa-angle-down rotate-icon"></i></a>
                                <div class="collapsible-body">
                                    <ul>
                                        <li>
                                            <a href="@Url.Action("Login", "Account")" class="waves-effect">Iniciar sesión</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("Register", "Account")" class="waves-effect">Registrarme</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="waves-effect">
                                <a class="arrow-r" href="@Url.Action("Index", "Dashboard")"><i class="fa  fa-chart-pie mr-1"></i> Dashboard</a>
                            </li>
                            @Html.Partial("_AdminMenu")
                        }
                    </ul>
                </li>
                <!--/. Side navigation links -->
            </ul>
            <div class="sidenav-bg mask-strong"></div>
        </div>
        <!--/. Sidebar navigation -->
        <!-- Navbar -->
        <nav class="navbar fixed-top navbar-toggleable-md navbar-expand-lg scrolling-navbar double-nav">
            <!-- SideNav slide-out button -->
            <div class="float-left">
                <a href="#" data-activates="slide-out" class="button-collapse"><i class="fa fa-bars"></i></a>
            </div>
            <!-- Breadcrumb-->
            <div class="breadcrumb-dn mr-auto">
                <p><a class="text-decoration-none" href="@Url.Action("Index", "Home")"> ERP Mensajeria</a></p>
            </div>
            @Html.Partial("_LoginPartial")
        </nav>
        <!-- /.Navbar -->
    </header>
    <!--/.Double navigation-->
    <!--Main Layout-->
    <main>
        <div class="container-fluid mt-5">
            @RenderBody()
        </div>
    </main>
    <!--Main Layout-->
    <!-- SCRIPTS -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/popper")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jsmaterial")
    @Scripts.Render("~/bundles/compiledjs")
    @Scripts.Render("~/bundles/datatables")
    @RenderSection("scripts", required: false)

    <script>
        $(".button-collapse").sideNav();

    </script>


    <script>
        //Animation init
        new WOW().init();

        //Modal
        $('#myModal').on('shown.bs.modal', function () {
            $('#myInput').focus()
        })

        // Material Select Initialization
        $(document).ready(function () {
            $('.mdb-select').material_select();
        });

        $(document).ready(function () {
            $('#dtBasicExample').DataTable();
            $('.dataTables_length').addClass('bs-select');
        });
    </script>
</body>
</html>
